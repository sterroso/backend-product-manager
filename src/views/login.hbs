    <header>
      <div class="brand">
        <img
          class="logo"
          src="/public/img/products_icon_128x128.png"
          alt="Logotipo de productos"
        />
        <h1 class="main-title">{{title}}</h1>
      </div>

      <nav id="nav">
        <ul class="main-menu">
          <li class="main-menu-item">
            <a href="/" class="link">Inicio</a>
          </li>
        </ul>
      </nav>
    </header>

    <main>
      <h2>Acceso</h2>
      <form id="userLogin">
        <div class="fieldRow">
          <label for="userEmailField">E-mail:</label>
          <input
            type="email"
            id="userEmailField"
            name="userEmailField"
            minLength="9"
            required
          />
        </div>

        <div class="fieldRow">
          <label for="userPassword">Contrase√±a:</label>
          <input
            type="password"
            id="userPasswordField"
            name="userPasswordField"
            minLength="6"
            required
          />
        </div>

        <div>
          <input type="submit" value="Entrar" id="loginButton" />
        </div>
      </form>
    </main>

    <footer>
      <div class="author">
        <p>Autor:
          <a class="email-link" href="mailto:sergio.terroso@gmail.com">Sergio
            Terroso</a></p>
      </div>
    </footer>

